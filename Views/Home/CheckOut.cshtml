@model CoffeeShopApp.Models.Order

@{
    ViewData["Title"] = "CheckOut";
}

<h1>Check Out</h1>

<div class="card">
    <div class="card-header">
        <h4>Order</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Users.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Users.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Users.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Users.Phone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Users.Phone)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Users.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Users.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TotalCost)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TotalCost)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderDate)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Index" class="btn btn-primary">Proceed to Payment</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

